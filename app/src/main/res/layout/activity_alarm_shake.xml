<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/shakeAlarmLabel"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="Label goes here"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/shakeAlarmCommand"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="Shake your phone to dismiss"
        android:textSize="24sp" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="324dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:foregroundTint="#D60A0A"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="50dip"
        android:progress="0"
        android:progressTint="#F11212" />

    <Button
        android:id="@+id/button"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="OnDismissClicked"
        android:text="Dismiss" />

</LinearLayout>